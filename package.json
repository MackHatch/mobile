{
  "name": "habit-mood-tracker",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n backend,mobile -c blue,magenta \"npm run dev:backend\" \"npm run dev:mobile\"",
    "dev:backend": "npm run dev --workspace=@habit-mood-tracker/backend",
    "dev:mobile": "npm run dev --workspace=@habit-mood-tracker/mobile",
    "infra:up": "docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down",
    "db:push": "npm run db:push --workspace=@habit-mood-tracker/backend",
    "db:migrate": "npm run db:migrate --workspace=@habit-mood-tracker/backend",
    "db:migrate:deploy": "npm run db:migrate:deploy --workspace=@habit-mood-tracker/backend",
    "db:seed": "npm run db:seed --workspace=@habit-mood-tracker/backend",
    "db:up": "docker compose -f infra/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.yml down -v",
    "test:smoke": "npx tsx tests/smoke/backend-smoke.ts",
    "prebuild:ios": "cd apps/mobile && cross-env APP_VARIANT=detox npx expo prebuild -p ios --clean",
    "detox:build:ios": "npm run prebuild:ios && detox build -c ios.sim.debug",
    "detox:test:ios": "detox test -c ios.sim.debug --cleanup",
    "detox:clean": "node -e \"require('fs').rmSync('apps/mobile/ios',{recursive:true,force:true})\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.2",
    "detox": "^20.14.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12"
  },
  "engines": {
    "node": ">=20"
  }
}
